{
  "packages": [
    "packages/*"
  ],
  "version": "0.26.6",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "access": "public",
      "allowBranch": [
        "master",
        "feature/*"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "allowBranch": [
        "master",
        "feature/*"
      ],
      "exact": true
    }
  }
}
